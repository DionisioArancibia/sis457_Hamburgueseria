@model WebHamburgueseria.Models.VentaDetalle

@{
    ViewData["Title"] = "Eliminar VentaDetalle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Eliminar VentaDetalle</h1>

<h3>Está seguro que desea eliminar el registro?</h3>
<div>
    <h4>VentaDetalle</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">Precio de Venta
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PrecioVenta)
        </dd>
        <dt class = "col-sm-2">Cantidad
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Cantidad)
        </dd>
        <dt class = "col-sm-2">SubTotal
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SubTotal)
        </dd>
        <dt class = "col-sm-2">Usuario Registro
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.UsuarioRegistro)
        </dd>
        <dt class = "col-sm-2">Fecha Registro
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FechaRegistro)
        </dd>
     
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="IdDetalleVenta" />
        <button type="submit" class="btn btn-danger"><i class="fa fa-trash"></i> Eliminar</button> |
        <a asp-action="Index"><i class="fa fa-arrow-left"></i> Volver a la lista</a>
    </form>
</div>
