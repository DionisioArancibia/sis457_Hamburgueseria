@model IEnumerable<WebHamburgueseria.Models.Categorium>

@{
    ViewData["Title"] = "Categorias";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Categorías</h1>

<p>
    <a asp-action="Create"><i class="fa fa-plus"></i>Crear nuevo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Descripción</th>
            <th>Usuario Registro</th>
            <th>Fecha Registro</th>
        
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UsuarioRegistro)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaRegistro)
            </td>
           
            <td>
                    <a asp-action="Edit" asp-route-id="@item.IdCategoria" title="Editar"><i class="fa fa-edit"></i></a> |
                    <a asp-action="Details" asp-route-id="@item.IdCategoria" title="Listar"><i class="fa fa-list"></i></a> |
                    <a asp-action="Delete" asp-route-id="@item.IdCategoria" title="Eliminar"><i class="fa fa-trash"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
